<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@drawable/scrollbar_style">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp">

            <LinearLayout
                android:id="@+id/secchi_line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"

                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/dialog_disk"

                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">


                    <RelativeLayout
                        android:id="@+id/secchi_line2"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/secchi_indent1"
                        android:layout_marginLeft="10dp">

                        <edu.uwp.alga.utils.LabelTextView
                            android:id="@+id/lux_line1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:lineSpacingExtra="4dp"
                            android:text="It is possible to measure the total depth with a Secchi Disk. Lower the disk until it reaches the bottom of the water source"
                            android:textColor="@color/WText"
                            android:textSize="20sp" />

                    </RelativeLayout>


                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>